<LoginManager>:

   Question1Screen:
      name: "question1"

   CorrectScreen:
      name: "correct"

   ErrorScreen:
      name: "error"
   Question2Screen:
      name: "question2"
   LoginPage:
      name: "login"
   NewUser:
      name: "new"
   WelcomeScreen:
      name: "welcome"





<Question1Screen>:

   BoxLayout:
      orientation: "vertical"
      Label:
         size_hint: 1, 7
         text: "What is the state fruit of Texas?"
      BoxLayout:
         Button:
            padding: 20
            text: "Peach"
            on_release: root.answer_question(False)
         Button:
            padding: 20
            text: "Grapefruit"
            on_release: root.answer_question(True)
         Button:
            padding: 20
            text: "Orange"
            on_release: root.answer_question(False)
<Question2Screen>
   BoxLayout:
      orientation: "vertical"
      Label:
         text: "Complete the following verse \n\n'The stars at night are big and bright______"
         size_hint: 1,7

      TextInput:
         id: heart
         hint_text: "Enter remaining verse"
      Button:
         text: "Press Enter"
         on_release: root.answer_question(heart.text)




<CorrectScreen>:
   BoxLayout:
      orientation: "vertical"
      Label:
         text: "CORRECT!"
      Button:
         size_hint:0.2,0.05
         pos_hint: {"center_x":0.5,"center_y":0.5}
         text: "ADVANCE >>"
         on_release: root.correct_advance()

<ErrorScreen>:
   BoxLayout:
      orientation: "vertical"
      Label:
         text: "WRONG!"
      Button:
         size_hint:0.2,0.05
         pos_hint: {"center_x":0.5,"center_y":0.5}
         text: "ADVANCE >>"
         on_release: root.error_advance()

<LoginPage>
   BoxLayout:
      orientation: "horizontal"
      Label:
         text: ""
         size_hint: .3,1
      BoxLayout:
         orientation: "vertical"
         Label:
            text: "Please Enter Your Username and Password"
         TextInput:
            id: username
            hint_text: "Enter Username"
            size_hint: 1.3,.5
         TextInput:
            id: password
            hint_text: "Enter Password"
            size_hint: 1.3,.5
         Button:
            text: "Login"
            color: "black"
            size_hint: 1.3,.5
            on_release: root.check_user(username.text, password.text)
         Button:
            text: "Create New User"
            color: "black"
            size_hint: 1.3,.25
            on_release: root.new_account()
         Label:
            text: ""
            id: blank
      Label:
         text: ""


<WelcomeScreen>
   Label:
      text: "Welcome!"
<NewUser>
   BoxLayout:
      orientation: "vertical"
      TextInput:
         id: new_username
         hint_text: "Please Enter a New Username"
      TextInput:
         id: new_password
         hint_text: "Please Enter a New Password"
      Button:
         text: "Create New User"
         color: "black"
         on_release: root.set_user(new_username.text, new_password.text)
      Label:
         text: "Password Must Contain 1 Capital Letter \nMust Contain 1 lower case letter\nMust Contain 1 Number\nMust Contain 1 Special Character\nMust be 8 characters long"

